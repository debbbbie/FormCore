{
  "private": true,
  "scripts": {
    "precommit": "yarn run lint-staged",
    "start": "cross-env ESLINT=none PORT=8881 roadhog dev",
    "start:no-proxy": "cross-env NO_PROXY=true ESLINT=none PORT=8881 roadhog dev",
    "build": "cross-env ESLINT=none roadhog build",
    "analyze": "cross-env ANALYZE=true roadhog build",
    "lint:style": "stylelint \"src/**/*.less\" --syntax less",
    "lint": "eslint --fix --ext .js src && yarn run lint:style",
    "lint:fix": "eslint --fix --ext .js src && yarn run lint:style",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --fix --ext .js",
    "test": "roadhog test",
    "test:component": "roadhog test ./src/components",
    "test:all": "node ./tests/run-tests.js",
    "prettier": "prettier --write ./src/**/*"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0-beta.36",
    "@types/react": "^16.0.35",
    "@types/react-router": "^4.0.21",
    "antd": "^3.3.0",
    "babel-runtime": "^6.9.2",
    "classnames": "^2.2.5",
    "enquire-js": "^0.2.1",
    "lodash": "^4.17.4",
    "lodash-decorators": "^4.4.1",
    "moment": "^2.19.1",
    "numeral": "^2.0.6",
    "omit.js": "^1.0.0",
    "path-to-regexp": "^2.1.0",
    "prop-types": "^15.5.10",
    "qs": "^6.5.0",
    "query-string": "^5.1.0",
    "rc-drawer-menu": "^0.5.3",
    "react": "^16.2.0",
    "react-container-query": "^0.9.1",
    "react-document-title": "^2.0.3",
    "react-dom": "^16.2.0",
    "react-fittext": "^1.0.0",
    "react-ga": "^2.4.1",
    "react-preloaded": "^1.0.0",
    "react-router-dom": "^4.2.2",
    "react-sortable-tree": "^2.1.0",
    "rollbar": "^2.3.4",
    "url-polyfill": "^1.0.10"
  },
  "devDependencies": {
    "babel-eslint": "^8.1.2",
    "babel-plugin-import": "^1.6.7",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "cross-env": "^5.1.1",
    "cross-port-killer": "^1.0.1",
    "enzyme": "^3.1.0",
    "eslint": "^4.14.0",
    "eslint-config-airbnb": "^16.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-babel": "^4.0.0",
    "eslint-plugin-compat": "^2.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-markdown": "^1.0.0-beta.6",
    "eslint-plugin-react": "^7.0.1",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "mockjs": "^1.0.1-beta3",
    "prettier": "1.11.1",
    "redbox-react": "^1.5.0",
    "regenerator-runtime": "^0.11.1",
    "roadhog": "^2.3.0",
    "stylelint": "^8.4.0",
    "stylelint-config-prettier": "^3.0.4",
    "stylelint-config-standard": "^18.0.0"
  },
  "optionalDependencies": {
    "puppeteer": "^1.1.1"
  },
  "lint-staged": {
    "**/*.{js,jsx,less}": [
      "prettier --write ./src/**/*",
      "git add ./src"
    ],
    "**/*.{js,jsx}": "lint-staged:js",
    "**/*.less": "stylelint --syntax less"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ]
}
